@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    @if (Model.ReleaseDate.HasValue){
        <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    }

    @if (Model.DateAdded.HasValue){
        <li>Added Date: @Model.DateAdded.Value.ToLongDateString()</li>
    }
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>
